<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="3dp"
        app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/profile_blog"
            android:orientation="horizontal">




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/interest_name"
                android:textAllCaps="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:layout_gravity="start|center"
                android:text="Interest"
                android:layout_toLeftOf="@+id/follow_interest"
                android:textColor="#000000"
                android:textSize="20sp"
                />

            <tv.merabihar.app.merabihar.CustomFonts.MyTextView_Roboto_Regular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/map_id"
                android:visibility="gone"
                android:text="0"
                android:layout_margin="5dp"
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textAlignment="center"
                />

            <android.support.v7.widget.AppCompatButton
                android:textSize="16dp"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:id="@+id/follow_interest"
                android:background="@drawable/rect_primary"
                android:layout_width="100dp"
                android:layout_alignParentRight="true"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:text="Follow"
                android:textAllCaps="false"

                />




        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>