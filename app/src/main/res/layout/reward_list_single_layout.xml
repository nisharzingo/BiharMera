<LinearLayout
    android:layout_width="match_parent"
    android:visibility="visible"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="5.5"
        >

        <FrameLayout
            android:background="#e41d60c7"
            android:layout_width="0dp"
            android:padding="4dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/star"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:paddingTop="5dp"
                android:id="@+id/top_user_value"
                android:gravity="center_vertical"
                android:textSize="17sp"
                android:textColor="#e41d60c7"
                android:text="50"
                />


        </FrameLayout>



        <TextView
            android:background="#e41d60c7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.2"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:id="@+id/top_nick_name"
            android:maxLength="18"
            android:textColor="@color/white"
            android:text="Nicknamhhhhkkssssssss"
            />

        <TextView
            android:background="#e41d60c7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:id="@+id/total_invite_value"
            android:text="0"
            />

        <TextView
            android:background="#e41d60c7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:textAlignment="center"
            android:id="@+id/total_earning_value"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="50"
            />

    </LinearLayout>

</LinearLayout>